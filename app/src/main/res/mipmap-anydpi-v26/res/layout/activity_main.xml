<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logoimg"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_250sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_12sdp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoimg"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/inknut_antiqua_semibold"
        android:text="@string/app_name"
        android:textColor="@color/grey"
        android:textSize="@dimen/_23sdp" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/inter_medium"
        android:text="@string/slogan"
        android:textColor="@color/grey"
        android:textSize="@dimen/_13sdp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/inter_medium"
        android:text="@string/sloganpt"
        android:textColor="@color/grey"
        android:textSize="@dimen/_13sdp"
        android:textStyle="italic" />

    <ImageView
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_130sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/_minus10sdp"
        android:src="@drawable/papaya" />

    <ImageView
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_130sdp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/_minus15sdp"
        android:src="@drawable/donotno" />

</RelativeLayout>